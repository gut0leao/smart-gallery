# Terraform Variables - Example Configuration
# Copy this file to terraform.tfvars and adjust values as needed

# Required Variables
project_id    = "your-gcp-project-id"
domain_name   = "smartgallery.exemplo.com"

# Optional Variables (defaults provided)
region        = "us-central1"     # Free tier eligible region
zone          = "us-central1-a"   # Free tier eligible zone
environment   = "staging"         # staging or production
machine_type  = "e2-micro"        # Free tier eligible (f1-micro also available)

# Environment-specific examples:

# Staging Environment
# environment  = "staging"
# machine_type = "e2-micro"

# Production Environment  
# environment  = "production"
# machine_type = "e2-small"